{
  "name": "@charmbyte/ui",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "styled-system",
    "styles.css"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./styles.css"
  },
  "scripts": {
    "prepare": "panda codegen",
    "prebuild": "panda build && npm run css:build",
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "dev": "panda watch & npm run css:watch & tsup src/index.tsx --format esm,cjs --dts --watch",
    "css:build": "panda cssgen --outfile ./styles.css",
    "css:watch": "panda cssgen --outfile ./styles.css --watch"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@charmbyte/eslint-config": "*",
    "@charmbyte/typescript-config": "*",
    "@pandacss/dev": "^0.53.3",
    "@pandacss/types": "^0.53.3",
    "@types/node": "^22.13.10",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "eslint": "^9.23.0",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  }
}
